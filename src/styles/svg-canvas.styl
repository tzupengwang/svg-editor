svg.svg-canvas {
  position: absolute
  width: calc(100% - 20px)
  height: calc(100% - 20px)
  left: 10px
  top: 10px
  border: 3px solid black
  box-sizing: border-box

  circle {
    fill: none
    stroke: #8f7c4f
    stroke-width: 5px
    &:hover {
      stroke-width: 8px
    }
  }

  line {
    stroke: #8f7c4f
    stroke-width: 5px
  }
}
